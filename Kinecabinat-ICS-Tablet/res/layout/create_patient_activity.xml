<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="500dp"
                android:layout_height="400dp"
                android:background="@color/create_pat_dg_background"
        >

    <TextView android:id="@+id/NameLabel"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="@string/create_patient_dg_name"
              android:textColor="@color/create_pat_dg_textColor"
            />
    <TextView android:id="@+id/firstNameLabel"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginLeft="120dp"
              android:text="@string/create_patient_dg_first_name"
              android:layout_toRightOf="@id/NameLabel"
              android:textColor="@color/create_pat_dg_textColor"
            />

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/et_name"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:scrollHorizontally="false"
              android:layout_below="@id/NameLabel"
              android:hint="@string/create_patient_dg_name"
              android:background="@drawable/kinecabinat_edit_text"
              android:textColorHint="@color/etc_hint_color"
              android:textColor="@color/etc_text_color"


            />
    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/et_first_name"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="50dp"
              android:scrollHorizontally="false"
              android:hint="@string/create_patient_dg_first_name"
              android:layout_below="@id/firstNameLabel"
              android:layout_toRightOf="@id/et_name"
              android:background="@drawable/kinecabinat_edit_text"
              android:textColorHint="@color/etc_hint_color"
              android:textColor="@color/etc_text_color"

            />

    <Button android:id="@+id/create_patient_create_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="CrÃ©er"
            android:layout_below="@id/et_first_name"/>
    <Button android:id="@+id/create_patient_close_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Annuler"
            android:layout_toLeftOf="@id/create_patient_create_button"/>


</RelativeLayout>